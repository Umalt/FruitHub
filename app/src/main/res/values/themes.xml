<resources>
    <!-- Base application theme. -->
    <style name="Theme.FruitHub" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.FruitHub.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/brandon_grotesque_regular</item>
    </style>
</resources>